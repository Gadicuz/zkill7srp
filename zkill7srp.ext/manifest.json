{
  "manifest_version": 2,
 
  "name": "-7- SRP",
  "version": "0.1.1",
  "description": "Adds 'Apply for -7- SRP' button for a loss on zkillboard",
 
  "icons": { "16": "logo16.png",
             "48": "logo48.png",
            "128": "logo128.png" },

  "content_scripts": [{
    "js": ["apply.js"],
    "matches": ["https://zkillboard.com/kill/*"]
  }],

  "permissions": [
    "storage"
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  } 
}